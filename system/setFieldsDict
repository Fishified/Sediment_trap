(
    zoneToCell
    {
        name "sedimentZone";
        fieldValues
        (
            volScalarFieldValue alpha_a 0.58
			volVectorFieldValue Ua (0 0 0)
			volVectorFieldValue Ub (0 0 0)
        );
    }
	
